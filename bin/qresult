#!/usr/bin/env bash

SQL_DIR="$HOME/Documents/2ndBrain/.cache/sqlite3.db"

DAILY=$(sqlite3 -column -header "$SQL_DIR" "SELECT session_type, session_count, total_hours FROM v_daily";)

echo -e "---Daily---"
printf '%s\n' "$DAILY"

TOTAL=$(sqlite3 -column -header "$SQL_DIR" "SELECT SUM(duration/3600.0) AS 'Total Hours' FROM sessions";)

echo -e "\n$TOTAL"

# cd "$SQL_DIR" && nvim "$SQL_DIR" -c DBUIToggle
