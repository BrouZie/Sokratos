#!/usr/bin/env bash
# Launch Kitty as a floating window on the current workspace.

CLASS="kitty-float"

if [ "$#" -eq 0 ]; then
  # No command given â†’ just open a shell
  exec kitty --class "$CLASS" --title "Kitty Float"
else
  # Forward whatever the user passed as the command
  exec kitty --class "$CLASS" --title "Kitty Float" "$@"
fi
